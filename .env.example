# FREDRICK AI Environment Variables
# Copy this file to .env and fill in your actual values

# Groq API Key
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# FREDRICK REST API Authentication
# Generate a secure random key for API authentication
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
FREDRICK_API_KEY=your_secure_api_key_here

# Application Configuration
APP_NAME=FREDRICK
APP_VERSION=1.0.0
ENVIRONMENT=development

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/fredrick.log

# Future: API Server Configuration (when web service is implemented)
# API_HOST=0.0.0.0
# API_PORT=8000
# API_RELOAD=true
